<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SabzSocial | Recovery</title>

    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <!-- id="auth-container" -->

  <body class="auth-page">
    <section id="auth-container">
      <form id="auth-form" method="post" action="/auth/reset-password">
        <header>
          <h2 class="text-3xl">Reset Password</h2>
        </header>

        <main class="mt-10">
          <div class="auth-input-card">
            <label for="register_username" class="font-Poppins-Medium">
              New Password
            </label>
            <div class="relative flex input-card items-center">
              <input
                id="register_username"
                type="password"
                name="password"
                class="auth-input"
                placeholder="Please enter new password ..."
              />
              <span class="absolute left-2 top-4 text-gray-300">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"
                  />
                </svg>
              </span>
            </div>
          </div>
        </main>
        <footer class="mt-4">
          <button type="submit" class="bg-indigo-700 text-white rounded-sm">
            Update Password
          </button>
        </footer>
      </form>
    </section>
    <div class="image-bg"></div>
    <script src="/js/sweetalert.js"></script>
    <script>
      if ("<%= locals.messages.error%>") {
        swal({
          title: "<%=locals.messages.error%>",
          icon: "error",
          button: "Try Again",
        });
      } else if ("<%= locals.messages.success%>") {
        swal({
          title: "<%=locals.messages.success%>",
          icon: "success",
          button: "Hooraaaüòç‚úÖ",
        });
      }
    </script>
    <script>
      const url = new URL(location.href);
      const pathname = window.location.pathname;
      const token = pathname.slice(pathname.indexOf("rd/") + 3);
      const form = document.querySelector("form");

      form.insertAdjacentHTML(
        "afterbegin",
        `<input type="hidden" name="token" value="${token}" />`
      );
    </script>
  </body>
</html>
